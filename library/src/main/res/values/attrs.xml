<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RatioViewAttrs">
        <!-- Sets view ratio size of aspect -->
        <attr name="aspectRatio" format="float" />
        <!-- Sets view type of ratio size -->
        <attr name="ratioType">
            <enum name="byWidth" value="0"/>
            <enum name="byHeight" value="1"/>
        </attr>
    </declare-styleable>

    <!-- RatioImageView -->
    <declare-styleable name="RatioImageView" parent="RatioViewAttrs">
        <attr name="aspectRatio" />
        <attr name="ratioType"/>
    </declare-styleable>

